<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/cic_edt_back"
                android:gravity="center"
                android:padding="5dp">

                <TextView
                    android:id="@+id/mm_number_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="@string/contract_id"
                    android:textColor="@color/colorBlackText"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/mm_number_edt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@null"
                    android:gravity="center_horizontal"
                    android:lines="1"
                    android:textSize="14sp"
                    android:theme="@style/MyText" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/cic_edt_back"
                android:gravity="center"
                android:padding="5dp">

                <TextView
                    android:id="@+id/mm_client_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="right"
                    android:text="@string/change_letter_id"
                    android:textColor="@color/colorBlackText"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/mm_client_edt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@null"
                    android:gravity="center_horizontal"
                    android:lines="1"
                    android:textSize="14sp"
                    android:theme="@style/MyText" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/cic_edt_back"
                android:gravity="center"
                android:padding="5dp">

                <TextView
                    android:id="@+id/mm_model_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="客  户:"
                    android:textColor="@color/colorBlackText"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/mm_model_edt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@null"
                    android:gravity="center_horizontal"
                    android:textSize="14sp"
                    android:theme="@style/MyText" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/cic_edt_back"
                android:gravity="center"
                android:padding="5dp">

                <TextView
                    android:id="@+id/mm_state_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="right"
                    android:text="状  态:"
                    android:textColor="@color/colorBlackText"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3">

                    <EditText
                        android:id="@+id/mm_state_edt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:background="@null"
                        android:focusable="false"
                        android:gravity="center_horizontal"
                        android:lines="1"
                        android:textSize="14sp"
                        android:theme="@style/MyText" />

                    <ImageView
                        android:id="@+id/mm_state_down"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignRight="@+id/mm_state_edt"
                        android:src="@mipmap/down" />
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/mm_query_button"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/cic_btn"
                android:onClick="onClick"
                android:text="@string/query"
                android:textColor="@color/colorWhite" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/mm_add_button"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/cic_btn"
                android:onClick="onClick"
                android:text="@string/add"
                android:textColor="@color/colorWhite" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>