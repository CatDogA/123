<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/mm_number_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/mm_number_edt"
                android:layout_centerVertical="true"
                android:layout_marginBottom="10dp"
                android:text="@string/mm_contract_id"
                android:textColor="@color/colorBlackText"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/mm_number_edt"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mm_area_edt"
                android:layout_toRightOf="@+id/mm_number_text"
                android:gravity="center_horizontal"
                android:lines="1"
                android:textSize="14sp"
                android:theme="@style/MyText" />

            <TextView
                android:id="@+id/mm_client_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/mm_number_edt"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@+id/mm_number_edt"
                android:text="@string/ck_change_letter_id"
                android:textColor="@color/colorBlackText"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/mm_client_edt"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mm_ck_text"
                android:layout_toEndOf="@+id/mm_client_text"
                android:layout_toRightOf="@+id/mm_client_text"
                android:gravity="center_horizontal"
                android:lines="1"
                android:textSize="14sp"
                android:theme="@style/MyText" />

            <TextView
                android:id="@+id/mm_model_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/mm_model_edt"
                android:layout_alignRight="@+id/mm_number_text"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:text="@string/customer"
                android:textColor="@color/colorBlackText"
                android:textSize="14sp" />


            />

            <EditText
                android:id="@+id/mm_model_edt"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mm_number_edt"
                android:layout_toRightOf="@+id/mm_model_text"
                android:focusable="false"
                android:gravity="center_horizontal"
                android:textSize="14sp"
                android:theme="@style/MyText" />

            <TextView
                android:id="@+id/mm_state_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/mm_state_edt"
                android:layout_alignRight="@+id/mm_client_text"
                android:layout_below="@+id/mm_client_text"
                android:gravity="bottom"
                android:paddingBottom="10dp"
                android:text="@string/mm_order_state"
                android:textColor="@color/colorBlackText"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/mm_state_edt"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mm_client_edt"
                android:layout_toRightOf="@+id/mm_state_text"
                android:focusable="false"
                android:gravity="center_horizontal"
                android:lines="1"
                android:textSize="14sp"
                android:theme="@style/MyText" />

            <ImageView
                android:id="@+id/mm_state_down"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignBottom="@+id/mm_state_edt"
                android:layout_alignRight="@+id/mm_state_edt"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:src="@mipmap/down" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/mm_query_button"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:onClick="onClick"
                android:text="@string/query" />

            <Button
                android:visibility="gone"
                android:id="@+id/mm_add_button"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:onClick="onClick"
                android:text="@string/add" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>