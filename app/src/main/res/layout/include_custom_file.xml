<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginBottom="10dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/cic_edt_back"
            android:gravity="center"
            android:padding="5dp">

            <TextView
                android:id="@+id/custom_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="客户名称:"
                android:textColor="@color/colorBlackText"
                android:textSize="11sp" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2">

                <EditText
                    android:id="@+id/edt_custom_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="center_horizontal"
                    android:textSize="14sp"
                    android:theme="@style/MyText" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/cic_edt_back"
            android:padding="5dp">
            <TextView
                android:id="@+id/custom_property"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="@string/custom_property"
                android:textColor="@color/colorBlackText"
                android:textSize="12sp" />
            <RelativeLayout
                android:id="@+id/rl_custom_nature"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2">
                <EditText
                    android:focusable="false"
                    android:id="@+id/edt_custom_nature"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="center_horizontal"
                    android:lines="1"
                    android:textSize="14sp"
                    android:theme="@style/MyText" />

                <ImageView
                    android:id="@+id/img_custom_property"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignRight="@+id/edt_custom_nature"
                    android:src="@mipmap/down" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/cic_edt_back"
            android:padding="5dp">

            <TextView
                android:id="@+id/mm_model_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="@string/custom_type"
                android:textColor="@color/colorBlackText"
                android:textSize="11sp" />

            <RelativeLayout
                android:id="@+id/rl_custom_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2">

                <EditText
                    android:id="@+id/edt_custom_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:focusable="false"
                    android:gravity="center_horizontal"
                    android:textSize="13sp"
                    android:theme="@style/MyText" />

                <ImageView
                    android:id="@+id/mm_model_down"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignRight="@+id/edt_custom_type"
                    android:src="@mipmap/down" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/cic_edt_back"
            android:padding="5dp">

            <TextView
                android:id="@+id/custom_level"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/custom_level"
                android:textColor="@color/colorBlackText"
                android:textSize="12sp" />
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/edt_custom_level"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:gravity="center_horizontal"
                    android:lines="1"
                    android:background="@null"
                    android:textSize="14sp"
                    android:theme="@style/MyText" />

                <ImageView
                    android:id="@+id/img_custom_level1"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignRight="@+id/edt_custom_level"
                    android:src="@mipmap/down" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/edt_custom_level2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:gravity="center_horizontal"
                    android:lines="1"
                    android:background="@null"
                    android:textSize="14sp"
                    android:theme="@style/MyText" />

                <ImageView
                    android:id="@+id/img_custom_level2"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignRight="@+id/edt_custom_level2"
                    android:src="@mipmap/down" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>