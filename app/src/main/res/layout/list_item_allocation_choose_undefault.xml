<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="info"
            type="com.shanghaigm.dms.model.entity.ck.AllocationAddChooseUndefaultInfo" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorBlack" />

            <TextView
                android:id="@+id/text_allocation_system"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:layout_weight="3"
                android:gravity="center"
                android:text="@{info.config_information}"
                android:textColor="@color/colorBlackText" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorBlack" />

            <EditText
                android:id="@+id/edt_allocation_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:layout_weight="3"
                android:inputType="numberDecimal"
                android:maxLength="10"
                android:background="@color/colorWhite"
                android:gravity="center"
                android:textColor="@color/colorBlackText"
                android:textSize="14sp" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorBlack" />

            <EditText
                android:id="@+id/edt_allocation_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:layout_weight="2"
                android:maxLength="8"
                android:background="@color/colorWhite"
                android:gravity="center"
                android:inputType="number"
                android:textColor="@color/colorBlackText"
                android:textSize="14sp" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorBlack" />

            <EditText
                android:id="@+id/edt_allocation_remarks"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:layout_weight="4"
                android:background="@color/colorWhite"
                android:gravity="center"
                android:textColor="@color/colorBlackText"
                android:textSize="14sp" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorBlack" />
        </LinearLayout>
    </LinearLayout>
</layout>
