<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context="com.shanghaigm.dms.view.activity.ck.OrderAddActivity">

    <include layout="@layout/include_title_bar" />

    <android.support.design.widget.TabLayout
        android:id="@+id/mm_order_detail_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabSelectedTextColor="@color/colorBlueText"
        app:tabTextColor="@color/colorBlackText">

    </android.support.design.widget.TabLayout>

    <FrameLayout
        android:id="@+id/mm_order_add_fragment_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </FrameLayout>
    <TextView
        android:background="@drawable/shape"
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/order_pass_button"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/cic_btn"
            android:text="@string/save" />

        <TextView
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/order_return_back_button"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/cic_btn_back_yellow"
            android:text="@string/submit" />
    </LinearLayout>
</LinearLayout>

