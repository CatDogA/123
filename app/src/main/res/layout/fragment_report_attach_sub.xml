<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.shanghaigm.dms.view.fragment.as.ReportAttachSubFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:layout_weight="2"
                android:background="@color/colorWhite"
                android:drawableEnd="@mipmap/add1"
                android:drawableLeft="@mipmap/all_car"
                android:drawablePadding="10dp"
                android:drawableRight="@mipmap/add1"
                android:drawableStart="@mipmap/all_car"
                android:gravity="center_vertical|start"
                android:padding="5dp"
                android:text="@string/car_name_plate" />

        </LinearLayout>

        <com.shanghaigm.dms.view.widget.MyGridView
            android:id="@+id/gv_car_sign"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:numColumns="4">

        </com.shanghaigm.dms.view.widget.MyGridView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:layout_weight="2"
                android:background="@color/colorWhite"
                android:drawableEnd="@mipmap/add1"
                android:drawableLeft="@mipmap/trouble"
                android:drawablePadding="10dp"
                android:drawableRight="@mipmap/add1"
                android:drawableStart="@mipmap/trouble"
                android:gravity="center_vertical|start"
                android:padding="5dp"
                android:text="@string/trouble_thing_picture" />

        </LinearLayout>

        <com.shanghaigm.dms.view.widget.MyGridView
            android:id="@+id/gv_trouble"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:numColumns="4">

        </com.shanghaigm.dms.view.widget.MyGridView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/textView32"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:layout_weight="2"
                android:background="@color/colorWhite"
                android:drawableEnd="@mipmap/add1"
                android:drawableLeft="@mipmap/repair"
                android:drawablePadding="10dp"
                android:drawableRight="@mipmap/add1"
                android:drawableStart="@mipmap/repair"
                android:gravity="center_vertical|start"
                android:padding="5dp"
                android:text="@string/after_repair_pic" />

        </LinearLayout>

        <com.shanghaigm.dms.view.widget.MyGridView
            android:id="@+id/gv_repair"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:numColumns="4">

        </com.shanghaigm.dms.view.widget.MyGridView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:layout_weight="2"
                android:background="@color/colorWhite"
                android:drawableEnd="@mipmap/add1"
                android:drawableLeft="@mipmap/other"
                android:drawablePadding="10dp"
                android:drawableRight="@mipmap/add1"
                android:drawableStart="@mipmap/other"
                android:gravity="center_vertical|start"
                android:padding="5dp"
                android:text="@string/else_pic" />

        </LinearLayout>

        <com.shanghaigm.dms.view.widget.MyGridView
            android:id="@+id/gv_other"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:numColumns="4">

        </com.shanghaigm.dms.view.widget.MyGridView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:layout_weight="2"
                android:background="@color/colorWhite"
                android:drawableEnd="@mipmap/add2"
                android:drawableLeft="@mipmap/video"
                android:drawablePadding="10dp"
                android:drawableRight="@mipmap/add2"
                android:drawableStart="@mipmap/video"
                android:gravity="center_vertical|start"
                android:padding="5dp"
                android:text="@string/video" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_video_add"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:scaleType="fitXY"
                android:src="@mipmap/add_pic" />

            <ImageView
                android:id="@+id/img_video"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:scaleType="fitXY" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
