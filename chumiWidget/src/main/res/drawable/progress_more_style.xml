<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="20"
    android:fromDegrees="0.0"
    android:toDegrees="360.0"
    android:pivotX="50.0%"
    android:pivotY="50.0%"
    android:repeatCount="infinite">
    <shape
        android:shape="ring"
        android:innerRadiusRatio="4.0"
        android:thicknessRatio="8.0"
        android:useLevel="false">
        <size
            android:height="16.0dp"
            android:width="16.0dp" />
        <gradient
            android:type="sweep"
            android:startColor="@color/widgetAccent"
            android:centerColor="@color/widgetGrayLight"
            android:endColor="@color/widgetAccent"
            android:useLevel="false"
            android:centerY="0.5"
            android:centerX="0.5"
            />
    </shape>
</rotate>