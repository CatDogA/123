<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/common_search_ll"
    android:layout_width="match_parent"
    android:layout_height="51dp"
    android:background="@android:color/white"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <RelativeLayout
        android:id="@+id/common_search_rl"
        android:layout_width="0dp"
        android:layout_height="33dp"
        android:layout_weight="1"
        android:layout_marginBottom="9dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="9dp"
        android:background="@android:color/white">

        <EditText
            android:id="@+id/common_search_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:drawableLeft="@mipmap/search_gray"
            android:drawablePadding="25dp"
            android:drawableStart="@mipmap/search_gray"
            android:gravity="center_vertical"
            android:hint="@string/widget_search"
            android:textColorHint="@color/searchHint"
            android:textColor="@color/searchText"
            android:textSize="15sp"
            android:maxLines="1"
            android:paddingBottom="3dp"
            android:paddingLeft="15dp"
            android:paddingStart="15dp"
            android:paddingRight="15dp"
            android:paddingEnd="15dp"
            android:paddingTop="3dp"
            android:selectAllOnFocus="true"
            android:shadowColor="@color/widgetGrayLight"
            android:visibility="visible"
            android:imeOptions="actionSearch" />

        <View
            android:layout_width="1dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="45dp"
            android:layout_marginStart="45dp"
            android:background="@color/searchDivider"/>

        <ImageView
            android:id="@+id/img_clear"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:contentDescription="@string/app_name"
            android:padding="5dp"
            android:scaleType="centerInside"
            android:src="@mipmap/clear_text"
            android:visibility="gone" />
    </RelativeLayout>

    <Button
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="@string/widget_cancel"
        android:textColor="#ff5118"
        android:textSize="16sp"
        android:background="@android:color/transparent"
        android:id="@+id/btn"/>
</LinearLayout>
